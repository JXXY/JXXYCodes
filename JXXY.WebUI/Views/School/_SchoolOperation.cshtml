@model JXXY.WebUI.Models.SchoolModel
<script type="text/javascript">
    $(function () {
        $("#btnClear").bind("click", function () {
            this.form.reset();
            $("#btnAdd").val("添加");
        });
    });
</script>
<div class="form-group">
    <label for="@Model.Name" class="col-sm-2 control-label">名 称：</label>
    <div class="col-sm-8">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="col-sm-2">
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    <label for="@Model.Address" class="col-sm-2 control-label">地 址：</label>
    <div class="col-sm-8">
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>
    <div class="col-sm-2">
        @Html.ValidationMessageFor(m => m.Address)
    </div>
</div>
<div class="form-group">
    <label for="@Model.Remark" class="col-sm-2 control-label">备 注：</label>
    <div class="col-sm-8">
        @Html.TextAreaFor(m => m.Remark, new { @class = "form-control"})
    </div>
    <div class="col-sm-2">
        @Html.ValidationMessageFor(m => m.Remark)
    </div>
</div>
<div class="form-group">
    <div class=" col-sm-10 col-sm-offset-2">
        <input type="submit" name="btnAdd" id="btnAdd" value="添 加" class="btn btn-sm" />&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="button" id="btnClear" value="清 空" class="btn btn-sm" />
    </div>
</div>


